{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "skipDefaultLibCheck": true,
    "declaration": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "declarationDir": "types",
    "sourceMap": true,
    "baseUrl": "./",
    "emitDeclarationOnly": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["src/*"] // 配置模块别名
    }
  },
  "exclude": ["node_modules", "types", "packages/*/tests"]
}
